<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/introduce"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:background="#9ddedee8"
            android:text="서울로 소개"/>

        <Button
            android:id="@+id/enjoy"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#ad98b43b"
            android:text="서울로 즐기기"/>

        <Button
            android:id="@+id/tour"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#ae478033"
            android:text="주변관광"/>
        <Button
            android:id="@+id/event"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="#af122310"
            android:text="행사안내"/>

        <Button
            android:id="@+id/guide"
            android:layout_width="match_parent"
            android:layout_height="122dp"
            android:background="#af030301"
            android:text="이용안내"/>



    </LinearLayout>
</FrameLayout>
